// Place your key bindings in this file to override the defaults

[
    //Move from code editor to the terminal (small size)
    { "key": "ctrl+`", "command": "workbench.action.terminal.focus", "when": "!terminalFocus"},

    //Move fromsmall size terminal to fill screen terminal ANS
    //Move from full screen terminal to code
    { "key": "ctrl+`", "command": "workbench.action.toggleMaximizedPanel", "when": "terminalFocus"},


    //Toggle between focusing between the editor and terminal (small size) without changing sizes.
    {"key": "ctrl+escape","command": "workbench.action.terminal.focus","when": "!terminalFocus"},
    {"key": "ctrl+escape","command": "workbench.action.focusLastEditorGroup","when": "terminalFocus"},


    //Show and hide the sidebar
    { "key": "ctrl+1", "command": "workbench.action.toggleSidebarVisibility"},

    
]
